<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- res/values/styles.xml -->
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/link</item>
        <item name="android:backgroundTint">@color/light_blue</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <!-- 自定义你的样式属性，例如字体大小、颜色等 -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/link</item>
    </style>


    <!-- Base application theme -->
<style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
<!--        <item name="colorPrimary">@color/link</item>-->
<!--        <item name="colorPrimaryDark">@color/blue</item>-->
<!--        <item name="colorAccent">@color/white</item>-->
        <!-- 其他样式设置 -->
        <item name="android:statusBarColor">@color/link</item> <!-- 状态栏颜色 -->
        <item name="android:windowLightStatusBar">true</item> <!-- 如果状态栏背景是深色，设置为true -->
    </style>
    <!-- Style for the AppBarLayout -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Support library compatibility -->
        <item name="android:background">@color/link</item>
    </style>
    <!-- Style for the Popup Menu (e.g., overflow menu) -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Support library compatibility -->
        <item name="android:background">@color/link</item>
    </style>
</resources>